@model IPagedList<ArtStore.DATA.EF.Models.Product>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Tiled Images";
}

@section Styles {
    <link href="~/css/PagedList.css" rel="stylesheet" />
}

<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Shop <span>Art</span>
            </h2>
            <p align="center">

                @if (User.IsInRole("Admin"))
                {
                    <span>
                        <a asp-action="Create">Add New Image</a> |
                    </span>
                }
                <a asp-action="Index">Table View</a>
            </p>
        </div>
        <div class="row">
            @*
            Search - Step 1
            - add the <form>
            - add the <input> textbox
            - add the <input> submit
            - Add if() to display # results and search term
            *@
            <div class="col-md-6 offset-3">
                <form asp-action="TiledProducts" method="get">
                    <!-- url.com/page?param=value&param2=value2-->
                    <label for="categoryId" class="control-label d-block text-center">Category</label>
                    <select name="categoryId" class="form-control text-center mb-3" asp-items="@ViewBag.CategoryId">
                        <option value="0">[Choose a Category]</option>
                    </select>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control text-center" placeholder="Search Gadgets..." />
                    <button type="submit" class="btn btn-primary d-block mx-auto w-50">GO!</button>
                    <a asp-action="TiledProducts" class="btn btn-secondary d-block mx-auto mt-2 w-50">Clear</a>
                </form>
                @if (ViewBag.NbrResults != null)
                {
                    <p class="mt-5 p-2 alert-warning text-center">
                        Showing @ViewBag.NbrResults result@(ViewBag.NbrResults == 1 ? "" : "s") for '@ViewBag.SearchTerm'...
                    </p>
                }
            </div>

            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-4 mb-4">
                    <div class="box h-100">
                        <div class="option_container">
                            <div class="options">
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="option1">
                                    @item.ProductName
                                </a>
                                <a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@item.ProductId" class="option2">
                                    Add To Cart
                                </a>
                            </div>
                        </div>
                        <div class="img-box">
                            <img src="~/images/@item.ProductImage" alt="@item.ProductName">
                        </div>
                        <div class="detail-box">
                            <h5>
                                @item.ProductName
                            </h5>
                            <h6>
                                @Html.DisplayFor(modelItem => item.ProductPrice)
                            </h6>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="w-50 mx-auto text-center">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                <div class="w-100">
                    @Html.PagedListPager(Model, page => Url.Action("TiledProducts", new {
                    page,
                    searchTerm = ViewBag.SearchTerm,
                    categoryId = ViewBag.CategoryId
                    }))
                </div>
            </div>
        </div>
    </div>
</section>